---
import Layout from "layouts/Layout/Layout.astro";
import ClusterSummary from "./ClusterSummary/ClusterSummary.astro";
import ClusterStats from "./ClusterStats/ClusterStats.astro";
import ClusterTimers from "./ClusterTimers/ClusterTimers.astro";
import DailyRewards from "./DailyRewards/DailyRewards.astro";
import Board from "./Board/Board.astro";
import "./ClustersPage.scss";
---

<Layout title="Кластеры" variant="langing">
	<div class="content-clusters">
		<div class="content-clusters__menu">
			<ClusterSummary className="content-clusters__cluster-summary" />
			<a class="content-clusters__dashboard-btn" href="/dashboard">Dashboard</a>
			<ClusterStats className="content-clusters__cluster-stats" />
			<ClusterTimers className="content-clusters__cluster-timers" />
		</div>
		<DailyRewards className="content-clusters__daily-rewards" />
		<Board className="content-clusters__board" />
	</div>
</Layout>
