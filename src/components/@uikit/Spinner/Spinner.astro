---
import classNames from "classnames";
import "./Spinner.scss";

export interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<div class={classNames(className, "spinner")}>
	<svg viewBox="25 25 50 50">
		<circle
			class="path"
			cx="50"
			cy="50"
			r="20"
			style={{
				fill: "none",
				strokeWidth: "2",
				strokeMiterlimit: "10",
			}}></circle>
	</svg>
</div>
