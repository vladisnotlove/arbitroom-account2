---
import classNames from "classnames";

export interface Props extends Record<string, any> {
	className?: string;
	disabled?: boolean;
	onlyInit?: boolean;
}

const { className, disabled, onlyInit, ...props } = Astro.props;
---

<input
	class={classNames(className, "input-url-sync")}
	data-url-sync-disabled={disabled}
	data-only-init={onlyInit}
	{...props}
/>

<script>
	import "./InputUrlSync";
</script>
