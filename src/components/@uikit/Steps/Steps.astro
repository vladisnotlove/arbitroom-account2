---
import classNames from "classnames";
import "./Steps.scss";

export interface Props extends Record<string, any> {
	className?: string;
	items: string[];
}

const { className, items, ...props } = Astro.props;
---

<div class={classNames(className, "steps")} {...props}>
	{items.map((item) => <div class="step">{item}</div>)}
</div>
