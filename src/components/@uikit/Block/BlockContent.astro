---
import classNames from "classnames";
import "./Block.scss";

export interface Props extends Record<string, any> {
	as?: keyof HTMLElementTagNameMap;
	className?: string;
}

const { as: As = "div", className, ...props } = Astro.props;
---

<As class={classNames(className, "block__content")} {...props}>
	<slot />
</As>
