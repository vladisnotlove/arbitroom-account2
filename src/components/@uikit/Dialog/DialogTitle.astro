---
import classNames from "classnames";
import IconButton from "../IconButton/IconButton.astro";
import Icon from "../Icon/Icon.astro";
import WithCloseModal from "../Modal/WithCloseModal.astro";
import "./Dialog.scss";

export interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<div class={classNames(className, "dialog__title")}>
	<slot />
	<WithCloseModal>
		<IconButton variant={"contained"} color={"gray"} size={"small"} type={"button"}>
			<Icon iconName={"close"} />
		</IconButton>
	</WithCloseModal>
</div>
