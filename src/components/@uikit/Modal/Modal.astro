---
import classNames from "classnames";
import "./Modal.scss";

export interface Props {
	as?: keyof HTMLElementTagNameMap;
	className?: string;
	id: string;
}

const { as: As = "div", className, id } = Astro.props;
---

<As class={classNames(className, "modal")} id={id}>
	<div class="modal__content">
		<slot />
	</div>
</As>
