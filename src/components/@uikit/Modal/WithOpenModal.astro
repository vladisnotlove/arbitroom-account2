---
import WithAttributes from "../WithAttributes/WithAttributes.astro";

export interface Props {
	modal: string;
	closeOthers?: boolean;
}

const { modal, closeOthers } = Astro.props;
---

<WithAttributes attributes={{ "data-open-modal": modal, "data-close-others": closeOthers ? "true" : undefined }}>
	<slot />
</WithAttributes>

<script>
	import "./WithOpenModal";
</script>
