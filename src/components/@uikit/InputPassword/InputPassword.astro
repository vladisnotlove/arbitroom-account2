---
import classNames from "classnames";
import Icon from "../Icon/Icon.astro";
import IconButton from "../IconButton/IconButton.astro";
import Input from "../Input/Input.astro";
import "./InputPassword.scss";

export interface Props {
	className?: string;
	name?: string;
	placeholder?: string;
}

const { className, name, placeholder } = Astro.props;
---

<Input className={classNames(className, "input-password")} name={name} type="password" placeholder={placeholder}>
	<IconButton
		slot="end"
		className="input-password__eye-btn"
		variant="text"
		color="text-color"
		type="button"
		attach="full"
	>
		<Icon className="input-password__eye-on-icon" iconName="eye-on" />
		<Icon className="input-password__eye-off-icon" iconName="eye-off" />
	</IconButton>
</Input>

<script>
	import "./InputPassword";
</script>
